<idea-plugin>
    <id>com.github.linzihao97.plugindemo</id>
    <name>tenx-plugin</name>
    <vendor>linzihao97</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.idea.maven</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.linzihao97.plugindemo.services.MyApplicationService"/>
        <projectConfigurable parentId="tools" instance="com.example.linzihao97.plugindemo.settings.AnyDoorSettingsConfigurable"
                                 id="com.example.linzihao97.plugindemo.settings.AnyDoorSettingsConfigurable"
                                 displayName="Settings Any Door" nonDefaultProject="true"/>
        <projectService
                serviceImplementation="com.example.linzihao97.plugindemo.settings.AayDoorSettingsState"/>
        <projectService serviceImplementation="com.github.linzihao97.plugindemo.services.MyProjectService"/>
        <projectService serviceImplementation="com.example.linzihao97.plugindemo.tenx.ReplClientService"/>
        <projectService serviceImplementation="com.example.linzihao97.plugindemo.listeners.ProcessExecutionListener"/>
        <intentionAction>
            <className>com.example.linzihao97.plugindemo.tenx.CallIntention</className>
        </intentionAction>
        <intentionAction>
            <className>com.example.linzihao97.plugindemo.anydoor.AnyDoorIntention</className>
        </intentionAction>
    </extensions>

    <applicationListeners>
        <listener class="com.github.linzihao97.plugindemo.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
    <projectListeners>
        <listener class="com.example.linzihao97.plugindemo.listeners.ProcessExecutionListener"
                  topic="com.intellij.execution.ExecutionListener"/>
    </projectListeners>
    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.example.linzihao97.plugindemo.tenx.MyNotifier"/>
        <notificationGroup id="Tenx"
                           displayType="BALLOON"
                           key="tenx.error"/>
    </extensions>
    <actions>
        <action id="com.example.linzihao97.plugindemo.tenx.StartClientAction"
                class="com.example.linzihao97.plugindemo.tenx.StartClientAction" text="Start REPL Client">
            <add-to-group group-id="ExternalSystemView.ActionsToolbar.CenterPanel" anchor="first"/>
        </action>
<!--        <action id="com.example.linzihao97.plugindemo.action.RunAction" class="com.example.linzihao97.plugindemo.action.RunAction" text="run test" description="run test v me 50">-->
<!--            <add-to-group group-id="ToolbarRunGroup" anchor="first" />-->
<!--        </action>-->
    </actions>
</idea-plugin>
